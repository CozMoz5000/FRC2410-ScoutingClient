<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#222222">

    <EditText
        android:id="@+id/teamNumberPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:maxLength="4"
        android:inputType="number" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Team Number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/teamNamePit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/teamNamePit"
        android:text="Team Name"
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/strategyPit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shooterCheckBoxPit"
        android:text="Description: "
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shooterDescriptionPit"
        android:text="Speed (Final)"
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/shooterSpeedPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/checkBox2"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/shooterCheckBoxPit"
        android:ems="10"
        android:maxLength="2"
        android:inputType="number" />

    <EditText
        android:id="@+id/shooterAnglePit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shooterSpeedPit"
        android:layout_alignRight="@+id/shooterSpeedPit"
        android:layout_alignTop="@+id/textView7"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shooterSpeedPit"
        android:text="Angle"
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/shooterDescriptionPit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shooterSpeedPit"
        android:layout_below="@+id/shooterCheckBoxPit"
        android:ems="10" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shooterAnglePit"
        android:layout_toLeftOf="@+id/shooterAnglePit"
        android:text="Adjustable"
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView8"
        android:text="Floor Pick Up"
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/shooterFloorPickUpPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/adjustableShooterPit"
        android:layout_below="@+id/adjustableShooterPit"
        android:text="" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shooterSystemSpeedPit"
        android:layout_alignBottom="@+id/shooterSystemSpeedPit"
        android:layout_alignParentLeft="true"
        android:text="System Speed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/shooterSystemSpeedPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shooterAnglePit"
        android:layout_alignRight="@+id/shooterDescriptionPit"
        android:layout_below="@+id/shooterFloorPickUpPit"
        android:ems="10"
        android:maxLength="2"
        android:inputType="number" />

    <EditText
        android:id="@+id/drivetrainWheelsPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shooterAnglePit"
        android:layout_alignLeft="@+id/drivetrainDesciptionPit"
        android:ems="10" />

    <EditText
        android:id="@+id/drivetrainSpeedPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adjustableShooterPit"
        android:layout_alignLeft="@+id/drivetrainWheelsPit"
        android:ems="10"
        android:maxLength="2"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/drivetrainWheelsPit"
        android:layout_alignBottom="@+id/drivetrainWheelsPit"
        android:layout_alignLeft="@+id/TextView01"
        android:text="Wheels"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignTop="@+id/shooterAnglePit"
        android:text="Speed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView13"
        android:layout_below="@+id/shooterAnglePit"
        android:text="Special"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/drivetrainSpecialPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shooterSystemSpeedPit"
        android:layout_alignTop="@+id/textView14"
        android:layout_toRightOf="@+id/TextView01"
        android:ems="10" />

    <CheckBox
        android:id="@+id/climbingCheckBoxPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_toRightOf="@+id/textView9"
        android:text="" 
        android:checked="true"/>

    <EditText
        android:id="@+id/climbingSpeedPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shooterSystemSpeedPit"
        android:layout_alignRight="@+id/shooterSystemSpeedPit"
        android:layout_below="@+id/climbingCheckBoxPit"
        android:ems="10"
        android:maxLength="2"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/climbingSpeedPit"
        android:layout_alignBottom="@+id/climbingSpeedPit"
        android:layout_alignParentLeft="true"
        android:text="Speed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/climbingHighestLevel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/climbingSpeedPit"
        android:layout_alignRight="@+id/climbingSpeedPit"
        android:layout_alignTop="@+id/textView16"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/climbingSpeedPit"
        android:text="Highest Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/climbingSidePit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/climbingHighestLevel"
        android:layout_toRightOf="@+id/textView1"
        android:text="Side"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/climbingCornerPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/climbingSidePit"
        android:layout_alignBottom="@+id/climbingSidePit"
        android:layout_toRightOf="@+id/shooterFloorPickUpPit"
        android:text="Corner"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/climbingSidePit"
        android:layout_alignParentLeft="true"
        android:text="Climbs Up: "
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/autonomousPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_toRightOf="@+id/TextView03"
        android:text="" 
        android:checked="true"/>

    <EditText
        android:id="@+id/miscTripTimePit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView21"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/miscColoredDiscsPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/miscTripTimePit"
        android:text="Colored Discs" 
        android:textColor="#FFFFFF"/>

    <CheckBox
        android:id="@+id/miscAbleToDefendPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/miscTripTimePit"
        android:layout_below="@+id/miscTripTimePit"
        android:text="Able to Defend"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/miscVisionTargeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/miscAbleToDefendPit"
        android:layout_below="@+id/miscAbleToDefendPit"
        android:text="Vision Targeting"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/adjustableShooterPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/autonomousPit" />

    <EditText
        android:id="@+id/drivetrainDesciptionPit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/shooterCheckBoxPit"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/drivetrainDesciptionPit"
        android:layout_alignBottom="@+id/drivetrainDesciptionPit"
        android:layout_toLeftOf="@+id/drivetrainDesciptionPit"
        android:text="Description: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drivetrainDesciptionPit"
        android:layout_alignLeft="@+id/TextView01"
        android:text="Drivetrain"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/miscVisionTargeting"
        android:layout_below="@+id/miscVisionTargeting"
        android:text="Estimated Score"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/TextView04"
        android:text="Trip Time (Last Score to Last Score)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/teamNumberPit"
        android:text="Strategy"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shooterSystemSpeedPit"
        android:layout_marginTop="10dp"
        android:text="Climbing"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:text="Autonomous"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/autonomousPlacementPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_toRightOf="@+id/climbingCheckBoxPit"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number" />

    <EditText
        android:id="@+id/autonomousLevelAimedPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autonomousNumPreloadedPit"
        android:layout_below="@+id/autonomousNumPreloadedPit"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autonomousLevelAimedPit"
        android:layout_alignBottom="@+id/autonomousLevelAimedPit"
        android:layout_alignParentLeft="true"
        android:text="Level Aimed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView03"
        android:text="Placement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autonomousNumPreloadedPit"
        android:layout_alignBottom="@+id/autonomousNumPreloadedPit"
        android:layout_alignParentLeft="true"
        android:text="# Preloaded"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/miscEstimatedScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView22"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/miscEstimatedScore"
        android:layout_below="@+id/miscEstimatedScore"
        android:text="Maintenance Time"
        android:textColor="#FFFFFF" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/miscMaintenanceTimePit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" 
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView23"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/shooterCheckBoxPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView6"
        android:checked="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/strategyPit"
        android:text="Shooter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_below="@+id/shooterSystemSpeedPit"
        android:text="Misc."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <CheckBox
        android:id="@+id/autonomousFloorPickupPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/autonomousLevelAimedPit"
        android:text="Floor Pickup"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/saveButtonPit"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Save"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/goBackButtonPit"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Back"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/resetButtonPit"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/autonomousNumPreloadedPit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autonomousPlacementPit"
        android:layout_alignTop="@+id/textView23"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number"/>

</RelativeLayout>