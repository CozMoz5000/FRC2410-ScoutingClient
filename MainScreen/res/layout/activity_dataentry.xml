<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        tools:context=".FieldsForm"
        android:background="#222222" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="1050dp" >

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match #"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/matchNumberField1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="number"
            android:textColor="#0000FF" 
            android:maxLength="3">
            <requestFocus/>

        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/matchNumberField1"
            android:text="Team #"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

		<EditText
		    android:id="@+id/teamNumberField1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/matchNumberField1"
		    android:layout_alignTop="@+id/textView3"
		    android:ems="10"
		    android:inputType="number"
		    android:maxLength="4"
		    android:textColor="#0000FF" />

        <Spinner
            android:id="@+id/allianceColorSpinner12"
            android:layout_width="131dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/teamNumberField1"
            tools:listitem="@android:layout/simple_spinner_item" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/allianceColorSpinner12"
            android:layout_alignBottom="@+id/allianceColorSpinner12"
            android:layout_alignParentLeft="true"
            android:text="Alliance Color"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/teamScoreField"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/allianceColorSpinner12"
            android:ems="10"
            android:maxLength="3"
            android:inputType="number"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/teamScoreField"
            android:layout_alignBottom="@+id/teamScoreField"
            android:layout_alignParentLeft="true"
            android:text="Team Score"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/allianceScoreField"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/teamScoreField"
            android:ems="10"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#0000FF" >
        </EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/allianceScoreField"
            android:layout_alignBottom="@+id/allianceScoreField"
            android:layout_alignParentLeft="true"
            android:text="Alliance Score"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

		<RadioGroup
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/scoreGroup"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/allianceColorSpinner12"
		    android:layout_below="@+id/allianceScoreField"
		    android:layout_marginTop="56dp"
		    android:orientation="vertical" >

		    <RadioButton
		        android:id="@+id/canScore"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:checked="true"
		        android:text="Can Score"
		        android:textColor="#FFFFFF" />

		    <RadioButton
		        android:id="@+id/cannotScore"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left|top"
		        android:text="Cannot Score"
		        android:textColor="#FFFFFF" />
		</RadioGroup>

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/scoreGroup"
		    android:text="Can Score On:"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#FFFFFF" />

		<CheckBox
		    android:id="@+id/onePointCheckBox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/textView1"
		    android:text="1 Point Goal"
		    android:textColor="#FFFFFF" />

		<CheckBox
		    android:id="@+id/twoPointCheckBox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/onePointCheckBox"
		    android:text="2 Point Goal"
		    android:textColor="#FFFFFF" />

		<CheckBox
		    android:id="@+id/threePointCheckBox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@+id/twoPointCheckBox"
		    android:layout_alignParentRight="true"
		    android:text="3 Point Goal"
		    android:textColor="#FFFFFF" />

		<CheckBox
		    android:id="@+id/fivePointCheckBox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/threePointCheckBox"
		    android:text="5 Point Goal"
		    android:textColor="#FFFFFF" />

		<TextView
		    android:id="@+id/textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/twoPointCheckBox"
		    android:layout_marginTop="34dp"
		    android:text="Climbing"
		    android:textColor="#FFFFFF"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		    <RadioGroup
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:id="@+id/climbGroup"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/fivePointCheckBox"
		        android:layout_marginTop="17dp"
		        android:orientation="vertical" >

		        <RadioButton
		            android:id="@+id/canClimb"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:checked="true"
		            android:text="Can Climb"
		            android:textColor="#FFFFFF" />

		        <RadioButton
		            android:id="@+id/cannotClimb"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left|top"
		            android:text="Cannot Climb"
		            android:textColor="#FFFFFF" />
		    </RadioGroup>

		    <TextView
		        android:id="@+id/textView6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/climbGroup"
		        android:text="Can Climb To:"
		        android:textColor="#FFFFFF"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <CheckBox
		        android:id="@+id/level1ClimbCheckBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/textView6"
		        android:textColor="#FFFFFF"
		        android:text="Level 1" />

		    <CheckBox
		        android:id="@+id/level2ClimbCheckBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/level1ClimbCheckBox"
		        android:layout_alignBottom="@+id/level1ClimbCheckBox"
		        android:layout_alignLeft="@+id/teamNumberField1"
		        android:textColor="#FFFFFF"
		        android:text="Level 2" />

		    <CheckBox
		        android:id="@+id/level3ClimbCheckBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/level2ClimbCheckBox"
		        android:layout_alignBottom="@+id/level2ClimbCheckBox"
		        android:layout_alignParentRight="true"
		        android:textColor="#FFFFFF"
		        android:text="Level 3" />

		    <TextView
		        android:id="@+id/textView8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/level1ClimbCheckBox"
		        android:layout_marginTop="26dp"
		        android:text="Special Features"
		        android:textColor="#FFFFFF"
		        android:textAppearance="?android:attr/textAppearanceLarge" />

		    <CheckBox
		        android:id="@+id/defenseCheckBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/textView8"
		        android:textColor="#FFFFFF"
		        android:text="Defense" />

		    <CheckBox
		        android:id="@+id/climbAssistCheckBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/textView8"
		        android:text="Climb Assist"
                android:textColor="#FFFFFF" />

		    <CheckBox
		        android:id="@+id/humanPlayerCheckBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/defenseCheckBox"
		        android:layout_centerHorizontal="true"
		        android:text="Scoring Human Player"
		        android:textColor="#FFFFFF" />

		    <TextView
		        android:id="@+id/textView9"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/humanPlayerCheckBox"
		        android:layout_marginTop="24dp"
		        android:text="Describe Movement"
		        android:textColor="#FFFFFF"
		        android:textAppearance="?android:attr/textAppearanceLarge" />

		    <EditText
		        android:id="@+id/movementField"
		        android:layout_width="wrap_content"
		        android:layout_height="75dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/textView9"
		        android:ems="10"
		        android:inputType="textMultiLine" 
		        android:textColor="#0000FF"/>

		    <TextView
		        android:id="@+id/commentsField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/movementField"
		        android:layout_marginTop="33dp"
		        android:textColor="#FFFFFF"
        		android:text="Additional Comments"
		        android:textAppearance="?android:attr/textAppearanceLarge" />

		    <EditText
		        android:id="@+id/additionalCommentsField"
		        android:layout_width="wrap_content"
		        android:layout_height="75dp"
		        android:textColor="#0000FF"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/commentsField"
		        android:ems="10"
		        android:inputType="textMultiLine" />

		    <Button
		        android:id="@+id/submitDataButton"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/additionalCommentsField"
		        android:layout_marginTop="27dp"
		        android:text="Submit"
        		android:textColor="#000000" />

		    <Button
		        android:id="@+id/resetDataButton"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/submitDataButton"
		        android:text="Reset"
        		android:textColor="#000000" />

		    <Button
		        android:id="@+id/goBackButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/resetDataButton"
		        android:text="Back"
        		android:textColor="#000000" />

		    <TextView
		        android:id="@+id/textView7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignTop="@+id/scoreGroup"
		        android:text="Scoring"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="#FFFFFF" />

		    <EditText
		        android:id="@+id/penaltiesField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#0000FF"
		        android:layout_alignLeft="@+id/allianceScoreField"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/allianceScoreField"
		        android:ems="10"
		        android:maxLength="3"
		        android:inputType="number" />

		    <TextView
		        android:id="@+id/textView10"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/penaltiesField"
		        android:layout_alignBottom="@+id/penaltiesField"
		        android:layout_alignParentLeft="true"
		        android:text="Penalties"
		        android:textColor="#FFFFFF"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		
	</RelativeLayout>
</ScrollView>